<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.dgn13.swipeandtabs.MainActivity">

    <view
        android:id="@+id/myTab"
        class="android.support.design.widget.TabLayout"
        id="@+id/view"
        layout_below="@+id/textView"
        layout_marginLeft="66dp"
        layout_marginStart="66dp"
        layout_marginTop="35dp"
        layout_toEndOf="@+id/textView"
        layout_toRightOf="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimaryDark" />

    <view
        android:id="@+id/myPager"
        class="android.support.v4.view.ViewPager"
        id="@+id/view2"
        layout_alignParentLeft="true"
        layout_alignParentStart="true"
        layout_below="@+id/myTab"
        layout_marginLeft="84dp"
        layout_marginStart="84dp"
        layout_marginTop="74dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</RelativeLayout>
