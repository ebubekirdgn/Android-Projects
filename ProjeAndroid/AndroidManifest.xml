<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.projeandroid"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="17" />
    <uses-permission android:name="android.permission.SEND_SMS"/>
    <uses-permission android:name="android.permission.CALL_PHONE"/>

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.projeandroid.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        
             <activity
            android:name="com.projeandroid.arama"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.ARAMAEKRANI" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
             
                  <activity
            android:name="com.projeandroid.sms"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.SMSEKRANI" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
                  
                       <activity
            android:name="com.projeandroid.kisi_ekle"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.KISIEKLEME" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>