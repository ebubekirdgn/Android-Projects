<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:clipChildren="true"
    android:clipToPadding="true"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/txtTuttugunuzTakim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:text="Tuttuğunuz Takım :"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <RadioButton
        android:id="@+id/rbgs"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rbsamsun"
        android:layout_below="@+id/rbsamsun"
        android:text="@string/rbgs" />

    <RadioButton
        android:id="@+id/rbfb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/rbsamsun"
        android:layout_below="@+id/txtTuttugunuzTakim"
        android:capitalize="characters"
        android:duplicateParentState="false"
        android:focusable="false"
        android:singleLine="false"
        android:text="@string/rbfb" />

    <RadioButton
        android:id="@+id/rbsamsun"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtTuttugunuzTakim"
        android:layout_below="@+id/rbfb"
        android:capitalize="words"
        android:text="@string/rbsamsun" />

    <Button
        android:id="@+id/button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/rbgs"
        android:layout_below="@+id/rbgs"
        android:text="@string/btngonder" />

</RelativeLayout>